using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.SceneManagement;

public class ButtonUI : MonoBehaviour
{
   public void PlayGameButton()     // Function runs when play button is pressed 
    {
        SceneManager.LoadScene("MainMenu");     // Loads Scene
    }

    public void HowToPlayButton()           // Function runs when button is pressed
    {
        SceneManager.LoadScene("HowToPlay");        // Loads scene
    }

    public void BackToMenuButton()          // Function runs when button is pressed
    {
        SceneManager.LoadScene("Menu Screen");      // Loads scene
    }

    public void Quit()              // function runs when button is pressed
    {
        Debug.Log("Quitting Game...");      // log that it quits the game
        Application.Quit();                 // Quits application
    }
}
